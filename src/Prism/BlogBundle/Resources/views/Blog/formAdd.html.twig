{% extends '::layout.html.twig' %}

{% block body %}


<div>
	{{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.author) }}
    {{ form_row(form.date) }}
    {{ froala_display( form_widget(form.content) ) }}

    {{ form_row(form.save, { 'label': 'Post' }) }}
    {{ form_end(form) }}
</div>
{% endblock %}